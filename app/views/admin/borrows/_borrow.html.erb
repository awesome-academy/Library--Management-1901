<tr>
  <td class="row"><%= borrow_counter + 1 %></td>
  <td><%= borrow.user_name %></td>
  <td><%= borrow.book_name %></td>
  <td><%= l borrow.started_at %></td>
  <td><%= l borrow.finished_at %></td>
  <div class="form-group top_search">
  <%= form_for [:admin, borrow] do |f| %>
    <td><%= f.select :status, status_choice, selected: borrow.status %></td>
    <td><%= f.submit t("borrows.change"), class: "btn btn-info" %></td>
  <% end %>
  </div>
</tr>

