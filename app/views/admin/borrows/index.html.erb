<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <%= render "layouts/admin/flash" %>
      <div class="title_left">
        <h3><%= t "borrows.index" %></h3>
      </div>
      <div class="">
        <div class="col-md-10 col-sm-10 col-xs-12 form-group pull-right top_search">
          <%= form_tag admin_borrows_path, method: :get do |f| %>
            <div class="input-group">
              <div class="col-sm-3 pull-right">
                <%= select_tag :status, options_for_select(status_choice, selected: params[:status]), class: "form-control" %>
              </div>
              <div class="col-sm-3 pull-right">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t("search.users") %>
              </div>
              <span class="input-group-btn">
                <%= submit_tag t("books.search"), class: "btn btn-default" %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
          <% if @borrows.any? %>
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t "admin.users" %></th>
                  <th><%= t "layouts.header.books" %></th>
                  <th><%= t "books.started_at" %></th>
                  <th><%= t "books.finished_at" %></th>
                  <th><%= t "borrows.status" %></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <%= render @borrows %>
              </tbody>
            </table>
            <% end %>
             <div class="col-sm-8 col-sm-offset-3">
              <%= paginate @borrows, theme: "twitter-bootstrap-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
