<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <%= render "layouts/admin/flash" %>
      <div class="title_left">
        <h3><%= t "admins.categories" %></h3>
      </div>
      <div>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group pull-right top_search">
          <%= form_tag admin_categories_path, method: :get do |f| %>
            <div class="input-group">
              <%= text_field_tag :search, params[:search], class: "form-control", placeholder: t("search.users") %>
              <span class="input-group-btn">
                <%= submit_tag t("books.search"), class: "btn btn-default" %>
              </span>
            </div>
          <% end %>
        </div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg"><%= t "categories.create_category" %></button>
        <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span>
                </button>
                <h4 class="modal-title" id="myModalLabel"><%= t "categories.create_category" %></h4>
              </div>
              <%= form_for [:admin, @category], class: "form-horizontal form-label-left" do |f| %>
                <div class="modal-body">
                  <%= f.label :name, t("books.category_name"), class: "control-label col-sm-3" %>
                  <div class=" col-sm-9">
                    <%= f.text_field :name, class: "form-control " %>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "books.close" %></button>
                  <%= f.submit t("categories.create_category"), class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t "categories.name" %></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <%= render @categories %>
              </tbody>
            </table>
            <div class="col-sm-8 col-sm-offset-3">
              <%= paginate @categories, theme: "twitter-bootstrap-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
