<div class="right_col" role="main">
  <div>
    <div class="page-title">
      <%= render 'layouts/admin/flash' %>
      <div class="title_left">
        <h3><%= t "admins.books" %></h3>
      </div>
      <div>
        <div class="col-md-4 col-sm-4 col-xs-12 form-group pull-right top_search">
          <%= search_form_for [:admin, @q], method: :get do |f| %>
            <div class="input-group">
              <%= f.search_field :name_or_content_or_publisher_name_or_authors_name_cont, class: "form-control", placeholder: t("search.users") %>
              <span class="input-group-btn">
                <%= f.submit t("books.search"), class: "btn btn-default" %>
              </span>
            </div>
          <% end %>
        </div>
        <div class="col-sm-2 pull-right">
          <%= link_to t("books.create"), new_admin_book_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
          <% if @books.any? %>
            <div class="book-exort">
              <p class="col-sm-2 pull-right export">
              <%= t "export.download" %>
              <%= link_to t("export.csv"), admin_books_path(format: "csv", q: q_params(params[:q])) %> |
              <%= link_to t("export.excel"), admin_books_path(format: "xls", q: q_params(params[:q])) %></p>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t "books.image" %></th>
                  <th><%= t "books.name" %></th>
                  <th><%= t "books.category_name" %></th>
                  <th><%= t "books.publisher_name" %></th>
                  <th><%= t "books.number_of_page" %></th>
                  <th><%= t "borrows.status" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @books %>
              </tbody>
            </table>
            <% end %>
            <div class="col-sm-8 col-sm-offset-3">
              <%= paginate @books, theme: "twitter-bootstrap-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
